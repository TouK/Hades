<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
            http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
       ">

    <camelContext xmlns="http://camel.apache.org/schema/spring">
        <routeBuilder ref="builder"/>
        <endpoint id="sampleSql" uri="jbi:endpoint:http://playmobile.pl/service/sql/sample/default"/>
    </camelContext>

    <bean id="builder" class="pl.touk.SampleSqlRouteBuilder"/>

    <bean id="hades_PC1_PC2" class="org.springframework.jndi.JndiObjectFactoryBean">
        <property name="jndiName" value="java:/jdbc/hades_PC1_PC2"/>
    </bean>

</beans>
